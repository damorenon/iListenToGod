@import "normalize.styl"

footerBackgColor = blue
footerHeight = 2.5rem
headerBackgColor = blue
headerHeight = 4rem

*
	border 0
	margin 0
	padding 0
a
	text-decoration none
body
	font-size 18px
footer
	background-color footerBackgColor
	border-top 1px solid #444
	bottom 0
	height footerHeight
	left 0
	line-height footerHeight
	padding 0
	position fixed
	width 100%
	z-index 2
header
	background-color headerBackgColor
	border-bottom 1px solid #D8D8D8
	font-weight bold
	height headerHeight
	left 0
	line-height headerHeight
	padding 0
	position fixed
	top 0
	width 100%
	z-index 2
header, footer
	color #f3f3f3
	font-size 22px
	text-align center
	text-shadow 0 -1px 0 rgba(0,0,0,0.5)
#wrapper
	background #aaa
	bottom footerHeight
	left 0
	overflow auto
	position absolute
	top headerHeight
	width 100%
	z-index 1
#scroll-content
	-webkit-overflow-scrolling touch
	overflow auto
	padding 0
	position absolute
	width 100%
	z-index 1

